{
  "name": "corvelloni-contabilidade",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh": "vite build --base=/corvelloni-contabilidade/",
    "preview": "vite preview --open",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\" -c .htmlhintrc -x \"docs/**\"",
    "check": "npm run lint:js && npm run lint:css && npm run lint:html && npm run build"
  },
  "devDependencies": {
    "eslint": "^9.9.0",
    "htmlhint": "^1.1.4",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^7.1.5"
  }
}
